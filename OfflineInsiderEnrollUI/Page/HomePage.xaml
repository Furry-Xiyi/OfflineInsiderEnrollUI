<Page
    x:Class="OfflineInsiderEnrollUI.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">

    <ScrollViewer>
        <Grid Padding="20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Padding="20,20" HorizontalAlignment="Stretch">

                <!-- 状态卡片 -->
                <Border
    x:Uid="CurrentStatusCard"
    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
    BorderThickness="1"
    CornerRadius="8"
    Padding="20">

                    <StackPanel Spacing="16">

                        <StackPanel x:Name="SystemInfoBar" Spacing="4">
                            <TextBlock
                x:Name="SystemInfoBarTitle"
                FontSize="20"
                FontWeight="SemiBold"
                Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                            <!-- 系统信息文本 -->
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon
        x:Name="SystemInfoBarIcon"
        Glyph="&#xE770;"
        FontFamily="Segoe Fluent Icons"
        FontSize="16"/>

                                <TextBlock
        x:Name="SystemInfoBarMessage"
        FontSize="16"
        Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- 当前状态标题 -->
                        <TextBlock
            x:Uid="CurrentStatusTitle"
            x:Name="CurrentStatusTitleText"
            FontSize="20"
            FontWeight="SemiBold"
            Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                        <!-- 状态文本 -->
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xECA7;" FontFamily="Segoe Fluent Icons" FontSize="16"/>
                            <TextBlock
                x:Uid="CurrentStatusText"
                x:Name="CurrentStatusText"
                FontSize="16"
                Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Flight Signing -->
                        <TextBlock
            x:Uid="FlightSigningText"
            x:Name="FlightSigningText"
            FontSize="14"
            Opacity="0.7"
            Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                    </StackPanel>
                </Border>

                <!-- 频道选择 -->
                <TextBlock
                    x:Uid="ChannelSelectionTitle"
                    x:Name="ChannelSelectionTitleText"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Margin="0,10,0,0"
                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                <muxc:RadioButtons
                    x:Uid="ChannelSelection"
                    x:Name="ChannelSelection"
                    SelectionChanged="ChannelSelection_Changed">

                    <RadioButton x:Uid="ChannelCanary" Tag="0"/>
                    <RadioButton x:Uid="ChannelDev" Tag="1"/>
                    <RadioButton x:Uid="ChannelBeta" Tag="2"/>
                    <RadioButton x:Uid="ChannelRP" Tag="3"/>

                </muxc:RadioButtons>

                <!-- 操作按钮 -->
                <StackPanel Spacing="12" Margin="0,20,0,0">

                    <!-- 前两个按钮并排（等宽） -->
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Enroll -->
                        <Button
    x:Uid="EnrollButton"
    x:Name="EnrollButton"
    Style="{StaticResource AccentButtonStyle}"
    Click="EnrollButton_Click"
    IsEnabled="False"
    HorizontalAlignment="Stretch">

                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE710;"
                          FontFamily="Segoe Fluent Icons"
                          FontSize="16"
                          Foreground="{ThemeResource TextFillColorPrimaryBrush}" Margin="0,1,0,0"/>

                                        <!-- x:Uid 自动提供文本 -->
                                        <TextBlock
                    Text="{Binding}"
                    FontSize="16"
                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>

                        </Button>

                        <!-- Unenroll -->
                        <Button
    x:Uid="UnenrollButton"
    x:Name="UnenrollButton"
    Grid.Column="1"
    Click="UnenrollButton_Click"
    HorizontalAlignment="Stretch">

                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xF3B1;"
                          FontFamily="Segoe Fluent Icons"
                          FontSize="16"
                          Foreground="{ThemeResource TextFillColorPrimaryBrush}" Margin="0,1,0,0"/>

                                        <TextBlock
                    Text="{Binding}"
                    FontSize="16"
                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>

                        </Button>
                    </Grid>

                    <!-- Refresh 单独一行 -->
                    <Button
    x:Uid="RefreshButton"
    x:Name="RefreshButton"
    Click="RefreshButton_Click"
    HorizontalAlignment="Stretch">

                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE72C;"
                          FontFamily="Segoe Fluent Icons"
                          FontSize="16"
                          Foreground="{ThemeResource TextFillColorPrimaryBrush}" Margin="0,1,0,0"/>

                                    <TextBlock
                    Text="{Binding}"
                    FontSize="16"
                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>

                    </Button>

                </StackPanel>

                <!-- 重启提示 -->
                <muxc:InfoBar
                    x:Uid="RebootInfoBar"
                    x:Name="RebootInfoBar"
                    IsOpen="False"
                    Severity="Warning"
                    Margin="0,20,0,0">

                    <muxc:InfoBar.ActionButton>
                        <Button
                            x:Uid="RebootButton"
                            Click="RebootButton_Click"/>
                    </muxc:InfoBar.ActionButton>
                </muxc:InfoBar>

                <!-- 注意事项 -->
                <Border
                    x:Uid="ImportantNoticeCard"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,20,0,0">

                    <StackPanel Spacing="12">

                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE7BA;" FontSize="20" Foreground="#F7630C"/>
                            <TextBlock
                                x:Uid="ImportantNoticeTitle"
                                x:Name="ImportantNoticeTitleText"
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>

                        <TextBlock
                            x:Uid="ImportantNoticeContent"
                            x:Name="ImportantNoticeContentText"
                            TextWrapping="Wrap"
                            Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                        <HyperlinkButton
                            x:Uid="OpenDiagnosticsButton"
                            x:Name="OpenDiagnosticsButtonText"
                            Click="OpenDiagnosticsButton_Click"
                            Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>